#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main()
{
	int num1, num2;
    float num3, num4;
    
    scanf("%d%d",&num1,&num2);
    scanf("%f%f", &num3,&num4);
    
    int sum12, diff12;
    float sum34, diff34;
    
    sum12 = num1 + num2;
    diff12 = num1 - num2;
    
    sum34 = num3 + num4;
    diff34 = num3 - num4;
    
    printf("%d %d\n", sum12, diff12);
    printf("%.1f %.1f", sum34, diff34);
    
    return 0;
}
